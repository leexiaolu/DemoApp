<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="splashviewmodel"
            type="com.example.leesnriud.demoapp.viewmodel.SplashViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <Button
                android:text="@string/button_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{(view) -> splashviewmodel.recyclerViewClick(view)}"/>

            <Button
                android:text="@string/button_two_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{(view) -> splashviewmodel.twowayClick(view)}"/>

    </LinearLayout>
</layout>